#category-tree(
  data={structure: render('offers/index/categories_nest.json', section: @current_section, set: @category_tree, depth: 0)}
)
/ …about the filter structure
#filters(
  data={structure: render('offers/index/filters.json')}
)


/ prepare modal
= modal_for 'unavailable_location_overlay', autoopen: false do
  p= t '.unavailable_location_modal'
  = render '/update_requests/new', update_request: @update_request
