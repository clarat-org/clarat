= modal_for 'popup', autoopen: false do
  h1= t 'layouts.partials.modal.popup.headline'
  p= t 'layouts.partials.modal.popup.text'
  = simple_form_for @contact do |f|
    = f.input :name, label: false, placeholder: 'Name*'
    = f.input :email, label: false, placeholder: 'Email*'
    = f.hidden_field :message, value: 'Ich m√∂chte an der Umfrage teilnehmen'
    = f.button :submit, value: t('layouts.partials.modal.popup.button')
  p.footer = t 'layouts.partials.modal.popup.footer'

script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"

= javascript_include_tag \
  "jquery.popupoverlay"

javascript:
  $('.JS-modal').popup('show');
                    